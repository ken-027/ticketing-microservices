        "@types/supertest": "^6.0.3",
        "jest": "^30.0.0",
        "mongodb-memory-server": "^10.1.4",
        "prettier": "3.5.3",
        "supertest": "^7.1.1",
        "ts-jest": "^29.4.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3"

{
    "name": "order-service",
    "version": "1.0.0",
    "main": "index.ts",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "start": "node build/src/index.js",
        "test": "jest --watchAll --no-cache",
        "format": "npx prettier . --write"

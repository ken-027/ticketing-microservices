        "dotenv": "^16.5.0",
        "express": "^4.21.2",
        "express-async-errors": "^3.1.1",
        "install": "^0.13.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.15.2",
        "mongoose-update-if-current": "^1.4.0",
        "node-nats-streaming": "^0.3.2",
        "update": "^0.7.4",
        "zod": "^3.25.64"
